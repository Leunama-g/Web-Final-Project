@model List<Clinic_Patient_Info_Management_System.Models.AdminIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Type</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.UserID</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Type</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Administrator", routeValues: new { UserID = item.UserID}, htmlAttributes: new { id = "loginLink" })
                </td>
            </tr>
        }

        
    </tbody>
</table>
